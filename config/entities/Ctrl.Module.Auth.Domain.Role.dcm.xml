<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Ctrl\Module\Auth\Domain\Role" table="ctrl_auth_role">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="autoinc" allocation-size="100" initial-value="1" />
        </id>

        <field name="name" column="username"   type="string" length="255" nullable="false" unique="false" />

        <many-to-many field="users" target-entity="Ctrl\Module\Auth\Domain\User">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="ctrl_auth_user_role">
                <join-columns>
                    <join-column name="role_id" referenced-column-name="id" nullable="false" unique="false" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="user_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>