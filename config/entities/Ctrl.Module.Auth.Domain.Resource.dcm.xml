<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Ctrl\Module\Auth\Domain\Resource" table="ctrl_auth_resource">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="autoinc" allocation-size="100" initial-value="1" />
        </id>

        <field name="name" column="resource" type="string" length="255" nullable="false" unique="false" />

        <one-to-many field="permissions" target-entity="Ctrl\Module\Auth\Domain\Permission" mapped-by="resource" />

    </entity>
</doctrine-mapping>